.mat-elevation-z2
  data-source-progress-bar([dataSource]="tableDataSource")

  .table-header
    .columns
      .col.span-6-of-12
        .table-notice
          button(*ngIf="!tableDataSource.hasData", mat-button, disabled="disabled") No data
      .col.span-6-of-12
        .table-actions
          button(mat-icon-button, [matMenuTriggerFor]="tableMenu")
            mat-icon more_vert
          mat-menu(#tableMenu="matMenu")
            button(*ngIf="exportConfig != undefined", mat-menu-item, (click)="exportData()")
              mat-icon cloud_download
              span Export
            button(*ngIf="_tableIndex", mat-menu-item, (click)="tableSetup()")
              mat-icon settings
              span Table Setup

          button(mat-icon-button, (click)="tableDataSource.update()", title="Refresh")
            mat-icon refresh

          ng-container([ngTemplateOutlet]="tableButtonsRef")

  ext-cdk-table(#table="", [dataSource]="tableDataSource")
    mat-header-row(*matHeaderRowDef="displayedColumnIds")
    mat-row(*matRowDef="let row; columns: displayedColumnIds;")

  mat-paginator(#paginator="", [pageSize]="20", [pageSizeOptions]="[10, 20, 50, 100]")

