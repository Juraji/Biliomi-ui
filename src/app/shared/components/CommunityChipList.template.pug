mat-form-field
  mat-chip-list(#chipList="")
    mat-chip(*ngFor="let item of chips", (remove)="removeChip(item)")
      | {{item}}
      mat-icon(matChipRemove) cancel
    input(#chipListInput="", [placeholder]="inputPlaceholder", [matChipInputFor]="chipList",
    [matChipInputSeparatorKeyCodes]="[188, 32]", (matChipInputTokenEnd)="addChipItem($event)", [matAutocomplete]="autoComplete")
    mat-autocomplete(#autoComplete="matAutocomplete")
      mat-option(*ngFor="let community of communitiesClient.searchCache(chipListInput.value)", [value]="community.Name")
        | {{community.Name}}
        small.text-muted &nbsp;by {{community.Owner.DisplayName}}
  mat-hint: ng-content
