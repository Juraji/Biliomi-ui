form(#customCommandEditForm="", (submit)="save()")
  h2(matDialogTitle) Editing command &#33;{{commandCommandControl.value || 'newcommand'}}

  mat-dialog-content
    mat-progress-spinner(*ngIf="editedCommand == undefined")

    mat-form-field
      input#command-command(matInput, name="command-command", placeholder="Commmand", required="true",
      [formControl]="commandCommandControl", [errorStateMatcher]="fieldMatcher")
      mat-hint The command to post in the chat to trigger this command.
      mat-error(*ngIf="commandCommandControl.hasError('required')") Please enter a command.

    mat-form-field
      textarea#command-message(matInput, name="command-message", placeholder="Message", required="true",
      [formControl]="commandMessageControl", [errorStateMatcher]="fieldMatcher", rows="4")
      mat-hint The message this command should trigger.
      mat-error(*ngIf="commandMessageControl.hasError('required')") Please enter a message.

    mat-form-field
      input#command-cooldown(matInput, type="number", name="command-cooldown", placeholder="Cooldown", required="true",
      [formControl]="commandCooldownControl", [errorStateMatcher]="fieldMatcher")
      mat-hint The cooldown for this command in milliseconds.
      mat-error(*ngIf="commandCooldownControl.hasError('required')") Please enter a valid number.

    mat-form-field
      input#command-price(matInput, type="number", name="command-price", placeholder="Price", required="true",
      [formControl]="commandPriceControl", [errorStateMatcher]="fieldMatcher")
      mat-hint The price for this command in {{'' | points | async}}.
      mat-error(*ngIf="commandPriceControl.hasError('required')") Please enter a valid number.

    user-group-select(#userGroup="")

    mat-form-field
      mat-chip-list(#aliassesChipList="")
        mat-chip(*ngFor="let alias of commandAliasses", (remove)="removedAliasChip(alias)")
          | &#33;{{alias}}
          mat-icon(matChipRemove) cancel
      input(placeholder="Aliasses", [matChipInputFor]="aliassesChipList",
      [matChipInputSeparatorKeyCodes]="[188, 32, 13]", (matChipInputTokenEnd)="addedAliasChip($event)")
      mat-hint An alias is like a different name for a command, like shorter syntax for instance.

  mat-dialog-actions
    button(mat-raised-button, color="primary") Save
    button(mat-raised-button, type="button", color="warn", (click)="cancelEdit()") Cancel
    button(mat-button, type="button", (click)="initFields()") Reset
    button(mat-button, type="button", (click)="deleteCommand()", [disabled]="editedCommand?.Id == undefined") Delete
