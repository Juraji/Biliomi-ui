mat-spinner(*ngIf="user == undefined")

div(*ngIf="user != undefined")
  h2 {{user?.DisplayName}}
  ul.list-unstyled
    li.text-primary(*ngIf="user.Caster") Channel Owner
    li.text-secondary(*ngIf="user.Moderator") Moderator
    li(*ngIf="user.Follower") Follower since {{user.FollowDate | date}}
    li(*ngIf="user.Subscriber") Subscriber since {{user.SubscribeDate | date}}

  .columns
    .col.span-4-of-12
      nav(mat-tab-nav-bar)
        a(mat-tab-link, [active]="true") Base Information

      user-base-information([user]="user")
    .col.span-8-of-12
      nav(mat-tab-nav-bar)
        a(mat-tab-link, *ngFor="let child of childRoutes", [routerLink]="child.path", routerLinkActive #rla="routerLinkActive", [active]="rla.isActive") {{child.data.crumbName}}

      router-outlet

