form(#userGroupEditForm="", (submit)="save()")
  h2(matDialogTitle)
    span(*ngIf="!editedGroup?.Name") New group
    span(*ngIf="editedGroup?.Name") Editing group: {{editedGroup?.Name}}

  mat-dialog-content
    mat-spinner(*ngIf="editedGroup == undefined")

    mat-form-field
      input#group-name(matInput, name="group-name", placeholder="Name", required="true",
      [formControl]="groupNameControl")
      mat-hint A unique name for this group,
      mat-error(*ngIf="groupNameControl.hasError('required')") This field is required!
      mat-error(*ngIf="groupNameControl.hasError('pattern')") Please only user alphabetic characters without spaces!

    mat-form-field(*ngIf="editedGroup?.Weight >= 10")
      mat-select#group-weight(name="group-weight", placeholder="Weight", required="true", [formControl]="weightControl")
        mat-option(*ngFor="let weight of 1000 | numberArray:10", [value]="weight") {{weight}}
      mat-hint The group weight, higher values mean more restriction.
      mat-error(*ngIf="weightControl.hasError('required')") This field is required!
      mat-error(*ngIf="weightControl.hasError('min')") Please enter a valid amount (greater than or equal to 10).
      mat-error(*ngIf="weightControl.hasError('max')") Please enter a valid amount (lesser than or equal to 1000).

    mat-form-field(*ngIf="editedGroup?.Weight >= 10")
      input#group-level-up-hours(matInput, type="number", name="group-level-up-hours",
      placeholder="Level Up Hours", [formControl]="levelUpHoursControl")
      mat-hint The amount of hours a user has to be in the channel to automatically get this group assigned, if the user's current group is lower.
      mat-error(*ngIf="levelUpHoursControl.hasError('min')") Please enter a valid amount (empty or greater than 0).

  mat-dialog-actions
    button(mat-raised-button, color="primary", [disabled]="!isFormOk", matTooltip="Save")
      mat-icon done
    button(mat-raised-button, type="button", color="warn", (click)="cancelEdit()", matTooltip="Cancel edit")
      mat-icon arrow_back
    button(mat-button, type="button", (click)="initFields()", matTooltip="Refresh data")
      mat-icon refresh
