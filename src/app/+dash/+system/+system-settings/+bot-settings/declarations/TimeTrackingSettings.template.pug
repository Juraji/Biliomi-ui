form(#timeTrackingSettingsEditForm="", (submit)="save()")
  mat-card
    mat-card-header
      mat-card-title Time Tracking Settings

    mat-card-content
      mat-slide-toggle([formControl]="trackOnlineTimeControl") Track Online Time

      mat-slide-toggle([formControl]="trackOfflineTimeControl") Track Offline Time

    mat-card-actions
      save-button([stateEmitter]="_timeTrackingSettingsClient.afterSave")
      button(mat-button, type="button", (click)="ngOnInit()", matTooltip="Refresh data")
        mat-icon refresh
