form(#chatSettingsEditForm="", (submit)="save()")
  mat-card
    mat-card-header
      mat-card-title Chat Settings

    mat-card-content
      mat-checkbox([formControl]="enableWhispersControl") Enable Whispers

      mat-checkbox([formControl]="muteBiliomiControl") Mute Biliomi

    mat-card-actions
      button(mat-raised-button, color="primary", title="Save")
        mat-icon done
      button(mat-button, type="button", (click)="ngOnInit()", title="Refresh data")
        mat-icon refresh

