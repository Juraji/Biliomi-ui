form(#chatSettingsEditForm="", (submit)="save()")
  mat-card
    mat-card-header
      mat-card-title Chat Settings

    mat-card-content
      mat-slide-toggle([formControl]="enableWhispersControl") Enable Whispers

      mat-slide-toggle([formControl]="muteBiliomiControl") Mute Biliomi

    mat-card-actions
      save-button([stateEmitter]="_systemSettingsClient.afterSave")
      button(mat-button, type="button", (click)="ngOnInit()", matTooltip="Refresh data")
        mat-icon refresh

