form(#pointsSettingsEditForm="", (submit)="save()")
  mat-card
    mat-card-header
      mat-card-title Points Settings
      mat-card-subtitle

    mat-card-content

      // Points names
      mat-form-field
        input#points-settings-points-name-singular(matInput, name="points-settings-points-name-singular",
        placeholder="Singulare Pointsname", required="true", [formControl]="pointsNameSingularControl")
        mat-hint The points name for singular amounts.
        mat-error(*ngIf="pointsNameSingularControl.hasError('required')") Please enter a valid name.

      mat-form-field
        input#points-settings-points-name-plural(matInput, name="points-settings-points-name-plural",
        placeholder="Plural Pointsname", required="true", [formControl]="pointsNamePluralControl")
        mat-hint The points name for plural amounts.
        mat-error(*ngIf="pointsNamePluralControl.hasError('required')") Please enter a valid name.

      hr
      // Online payouts
      mat-checkbox([formControl]="trackOnlineControl") Payout when stream is online

      mat-form-field(*ngIf="trackOnlineControl.value")
        input#points-settings-online-payout-interval(matInput, name="points-settings-online-payout-interval",
        placeholder="Online Payout Interval", required="true", [formControl]="onlinePayoutIntervalControl")
        mat-hint The payout interval when the stream is online in milliseconds.
        mat-error(*ngIf="onlinePayoutIntervalControl.hasError('required')") Please enter a valid amount (min 60000 = 1 minute).

      mat-form-field(*ngIf="trackOnlineControl.value")
        input#points-settings-online-payout-amount(matInput, name="points-settings-online-payout-amount",
        placeholder="Online Payout Amount", required="true", [formControl]="onlinePayoutAmountControl")
        mat-hint The payout amount when the stream is online.
        mat-error(*ngIf="onlinePayoutAmountControl.hasError('required')") Please enter a valid amount.

      hr
      // Offline payouts
      mat-checkbox([formControl]="trackOfflineControl") Payout when stream is offline

      mat-form-field(*ngIf="trackOfflineControl.value")
        input#points-settings-offline-payout-interval(matInput, name="points-settings-offline-payout-interval",
        placeholder="Offline Payout Interval", required="true", [formControl]="offlinePayoutIntervalControl")
        mat-hint The payout interval when the stream is offline in milliseconds.
      mat-error(*ngIf="offlinePayoutIntervalControl.hasError('required')") Please enter a valid amount (min 60000 = 1 minute).

      mat-form-field(*ngIf="trackOfflineControl.value")
        input#points-settings-offline-payout-amount(matInput, name="points-settings-offline-payout-amount",
        placeholder="Offline Payout Amount", required="true", [formControl]="offlinePayoutAmountControl")
        mat-hint The payout amount when the stream is offline.
        mat-error(*ngIf="offlinePayoutAmountControl.hasError('required')") Please enter a valid amount.

      .mat-button-row
        button(mat-raised-button, color="primary") Save
        button(mat-button, type="button", (click)="ngOnInit()") Reset
