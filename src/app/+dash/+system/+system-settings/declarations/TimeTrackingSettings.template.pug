form(#timeTrackingSettingsEditForm="", (submit)="save()")
  mat-card
    mat-card-header
      mat-card-title Time Tracking Settings

    mat-card-content
      mat-checkbox([formControl]="trackOnlineTimeControl") Track Online Time

      mat-checkbox([formControl]="trackOfflineTimeControl") Track Offline Time

      .mat-button-row
        button(mat-raised-button, color="primary") Save
        button(mat-button, type="button", (click)="ngOnInit()") Reset
