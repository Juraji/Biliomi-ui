mat-card
  mat-card-header
    mat-icon(matCardAvatar) chat
    mat-card-title Chatters
    mat-card-subtitle {{viewersClient.count}}

  mat-card-content
    ul.list-unstyled
      li.text-muted(*ngIf="viewersClient.count == 0") No viewers
      li.router-link(*ngFor="let viewer of viewersClient.viewers | arrayPageSlice:matPageEvent", [routerLink]="viewer.Username | editUserLink")
        user-display([user]="viewer")

  mat-card-actions(*ngIf="viewersClient.count > 10")
    mat-paginator.hide-items-label([length]="viewersClient.count", pageSize="10", (page)="matPageEvent = $event")
