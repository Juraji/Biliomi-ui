form(#tamagotchiSettingsForm="", (submit)="save()")
  mat-card
    mat-card-header
      mat-card-title Tamagotchi Settings

    mat-card-content
      mat-form-field
        input(matInput, name="tamagotchi-new-price", required, [formControl]="newPriceControl",
        placeholder="New Price")
        mat-hint The price for buying a new tamagotchi in points.
        mat-error(*ngIf="newPriceControl.hasError('required')") This field is required!
        mat-error(*ngIf="newPriceControl.hasError('min')") A minimum of 0 is required.

      mat-form-field
        input(matInput, name="tamagotchi-food-price", required, [formControl]="foodPriceControl",
        placeholder="Food Price")
        mat-hint The price for buying candy, per piece.
        mat-error(*ngIf="foodPriceControl.hasError('required')") This field is required!
        mat-error(*ngIf="foodPriceControl.hasError('min')") A minimum of 0 is required.

      mat-form-field
        input(matInput, name="tamagotchi-soap-price", required, [formControl]="soapPriceControl",
        placeholder="Soap Price")
        mat-hint The price for cleaning a tamagotchi, per piece.
        mat-error(*ngIf="soapPriceControl.hasError('required')") This field is required!
        mat-error(*ngIf="soapPriceControl.hasError('min')") A minimum of 0 is required.

      mat-form-field
        input(matInput, name="tamagotchi-max-food", required, [formControl]="maxFoodControl",
        placeholder="Max Food")
        mat-hint The maximum of food a tamagotchi can have. Note that 1 food lasts 24 hours, on 0 the tamagotchi dies.
        mat-error(*ngIf="maxFoodControl.hasError('required')") This field is required!
        mat-error(*ngIf="maxFoodControl.hasError('min')") A minimum of 1 is required.

      mat-form-field
        input(matInput, name="tamagotchi-max-mood", required, [formControl]="maxMoodControl",
        placeholder="Max Mood")
        mat-hint The maximum of mood for a tamagotchi. 1 mood level lasts for 24 hours.
        mat-error(*ngIf="maxMoodControl.hasError('required')") This field is required!
        mat-error(*ngIf="maxMoodControl.hasError('min')") A minimum of 1 is required.

      mat-form-field
        input(matInput, name="tamagotchi-max-hygiene", required, [formControl]="maxHygieneControl",
        placeholder="Max Mood")
        mat-hint The maximum of hygiene for a tamagotchi. 1 mood level lasts for 24 hours.
        mat-error(*ngIf="maxHygieneControl.hasError('required')") This field is required!
        mat-error(*ngIf="maxHygieneControl.hasError('min')") A minimum of 1 is required.

      mat-form-field
        input(matInput, name="tamagotchi-max-name-length", required, [formControl]="nameMaxLengthControl",
        placeholder="Max Mood")
        mat-hint The maximum length for tamaogtchi names.
        mat-error(*ngIf="nameMaxLengthControl.hasError('required')") This field is required!
        mat-error(*ngIf="nameMaxLengthControl.hasError('min')") A minimum of 0 is required.

      mat-slide-toggle([formControl]="botTamagotchiEnabledControl") Enable Bot Tamagotchi

    mat-card-actions
      save-button([disabled]="!isFormOk", [stateEmitter]="_tamagotchiSettingsClient.afterSave")
      button(mat-button, type="button", (click)="initFields()", matTooltip="Refresh data")
        mat-icon refresh
