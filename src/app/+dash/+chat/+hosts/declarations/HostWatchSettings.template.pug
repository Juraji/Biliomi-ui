form(#hostWatchSettingsForm="", (submit)="saveSettings()")
  mat-card
    mat-card-header
      mat-card-title Host Watch Settings
      mat-card-subtitle &nbsp;

    mat-card-content
      mat-form-field
        input#host-reward(matInput, type="number", name="host-reward",
        placeholder="Host Reward", required="true", [formControl]="hostRewardControl")
        mat-hint The amount of points to payout to hosters. Set to 0 for no payouts.
        mat-error(*ngIf="hostRewardControl.hasError('required')") This field is required!
        mat-error(*ngIf="hostRewardControl.hasError('min')") Please enter a valid amount (min 0).

      .mat-button-row.mat-button-row-blocks
        edit-template-button(templateKey="IncomingHostNotice") Edit Incoming Host Notice

    mat-card-actions
    save-button([disabled]="!isFormOk", [stateEmitter]="_hostWatchSettingsClient.afterSave", (click)="saveSettings()")
    button(mat-button, type="button", (click)="ngOnInit()", matTooltip="Refresh data")
      mat-icon refresh
