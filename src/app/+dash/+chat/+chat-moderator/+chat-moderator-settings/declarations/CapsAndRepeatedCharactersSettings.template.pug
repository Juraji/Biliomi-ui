form(#capsANDRepeatedCharactersSettingsForm="", (submit)="saveSettings()")
  mat-card
    mat-card-header
      mat-card-title Caps & Repeated Characters

    mat-card-content

      // Caps
      mat-slide-toggle([formControl]="excessiveCapsAllowedControl") Allow Excessive Caps

      mat-form-field
        input#caps-trigger-input(matInput, type="number", name="caps-trigger-input",
        placeholder="Caps Trigger", required="true", [formControl]="capsTriggerControl")
        mat-hint The minimum amount of characters in a message before caps are evaluated.
        mat-error(*ngIf="capsTriggerControl.hasError('required')") This field is required!
        mat-error(*ngIf="capsTriggerControl.hasError('min')") Please enter a valid amount (greater than 0).

      mat-form-field
        input#caps-trigger-ratio-input(matInput, type="number", name="caps-trigger-ratio-input",
        placeholder="Caps Trigger", required="true", [formControl]="capsTriggerRatioControl")
        span(matSuffix) %
        mat-hint The maximum caps to lowercase ratio allowed, from 0% to 100%.
        mat-error(*ngIf="capsTriggerRatioControl.hasError('required')") This field is required!
        mat-error(*ngIf="capsTriggerRatioControl.hasError('min')") Please enter a valid amount (greater than 0).
        mat-error(*ngIf="capsTriggerRatioControl.hasError('max')") Please enter a valid amount (lesser than or equal to 100).
        
      hr

      // Repeated Characters
      mat-slide-toggle([formControl]="repeatedCharactersAllowedControl") Allow Repeated Characters

      mat-form-field
        input#repeated-character-trigger-input(matInput, type="number", name="repeated-character-trigger-input",
        placeholder="Repeated Character Trigger", required="true", [formControl]="repeatedCharacterTriggerControl")
        mat-hint The maximum length of a repeated character chain.
        mat-error(*ngIf="repeatedCharacterTriggerControl.hasError('required')") This field is required!
        mat-error(*ngIf="repeatedCharacterTriggerControl.hasError('min')") Please enter a valid amount (greater than 0).

    mat-card-actions
      save-button([disabled]="!isFormOk", [stateEmitter]="_chatModeratorSettingsClient.afterSave")
      button(mat-button, type="button", (click)="ngOnInit()", matTooltip="Refresh data")
        mat-icon refresh
