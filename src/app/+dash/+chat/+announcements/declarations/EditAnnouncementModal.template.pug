form(#editAnnouncementForm="", (submit)="save()")
  h2(matDialogTitle)
    span(*ngIf="!editedAnnouncement?.Message") New announcement
    span(*ngIf="editedAnnouncement?.Message") Editing announcement

  mat-dialog-content
    mat-spinner(*ngIf="editedAnnouncement == undefined")

    mat-form-field
      input#announcement-message(matInput, name="announcement-message", placeholder="Message", required="true",
      [formControl]="messageControl")
      mat-hint The message that  will get posted in the chat.
      mat-error(*ngIf="messageControl.hasError('required')") This field is required!

  mat-dialog-actions
    button(mat-raised-button, color="primary", [disabled]="!isFormOk", matTooltip="Save")
      mat-icon done
    button(mat-raised-button, type="button", color="warn", (click)="cancelEdit()", matTooltip="Cancel edit")
      mat-icon arrow_back
    button(mat-button, type="button", (click)="initFields()", matTooltip="Refresh data")
      mat-icon backspace
    button(mat-button, type="button", (click)="deleteAnnouncement()", [disabled]="editedAnnouncement?.Id == undefined", matTooltip="Delete announcement")
      mat-icon delete_forever