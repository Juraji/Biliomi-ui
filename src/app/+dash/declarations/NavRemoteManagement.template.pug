a.mat-icon-button(mat-button, (click)="toggleManagementCard()", )
  mat-icon(*ngIf="eventsService.isConnected", title="Remote management") settings_power
  mat-icon(*ngIf="eventsService.isConnecting", title="Connecting to Biliomi") wifi
  mat-icon(*ngIf="!eventsService.isConnected && !eventsService.isConnecting", title="Biliomi's seems to not be available, try reloading") warning

mat-card.info-card.mat-elevation-z6(*ngIf="managementCardVisible", #managementCard="")
  mat-card-header
    mat-icon(matCardAvatar) settings_power
    mat-card-title Remote Management
    mat-card-subtitle &nbsp;

  mat-card-content
    p.text-ok(*ngIf="eventsService.isConnected") Biliomi is running and available!
    p(*ngIf="eventsService.isConnecting") Connecting to Biliomi
    p.text-not-ok(*ngIf="!eventsService.isConnected && !eventsService.isConnecting") Biliomi's seems to not be available, try reloading

    .mat-button-row(*ngIf="eventsService.isConnected")
      button(mat-raised-button, title="Restart Biliomi", (click)="powerRestartBiliomi()")
        mat-icon refresh
      button(mat-raised-button, title="Shut down Biliomi", (click)="powerShutDownBiliomi()")
        mat-icon power_settings_new
