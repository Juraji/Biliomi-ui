a.mat-button(mat-button)
  span(matTooltip="Viewers in chat")
    mat-icon.text-ok chat
    .badge {{channelInfoClient.Viewers.length}}
  span.spacer
  span(matTooltip="Followers")
    mat-icon.text-not-ok favorite
    .badge {{channelInfoClient.FollowerCount}}
  span.spacer
  span(*ngIf="channelInfoClient.Affiliate", matTooltip="Subscribers")
    mat-icon.text-ok attach_money
    .badge {{channelInfoClient.SubscriberCount}}
