mat-sidenav-container
  mat-toolbar(color="primary")
    mat-toolbar-row
      a.mat-icon-button(mat-button, (click)="sideNav.toggle()", matTooltip="Toggle menu")
        mat-icon menu
      a.mat-icon-button(mat-button, routerLink="/dash/home", matTooltip="Go to Home")
        mat-icon home
      span.spacer
      nav-channel-info-component
      .flex-spacer
      voice-commands
      a.mat-icon-button(mat-button, (click)="toggleDisplayTwitchChat()", matTooltip="Toggle Chat")
        mat-icon(*ngIf="displayTwitchChat") chat
        mat-icon(*ngIf="!displayTwitchChat") chat_bubble_outline
      nav-remote-management-component
      nav-auth-bar-component

  bread-crumbs
  page-loading-bar

  .main-content-wrapper.columns
    #content-column.content-column([ngClass]="{'full-width': !displayTwitchChat}")
      router-outlet
    #chat-column.content-column(*ngIf="displayTwitchChat")
      chat-component

  mat-sidenav(#sideNav="")
    nav
      h3 Biliomi
      ul
        li: a(routerLink="/dash/home") Dash
        li: a(routerLink="/dash/commands") Commands

      h3 System
      ul
        li: a(routerLink="/dash/system/users") Users
        li: a(routerLink="/dash/system/system-settings") System Settings
        li: a(routerLink="/dash/system/game-register") Games

      h3 Chat
      ul
        li: a(routerLink="/dash/chat/chat-moderator") Chat Moderator
        li: a(routerLink="/dash/chat/announcements") Announcements

      h3 Games
      ul
        li: a(routerLink="/dash/games/achievements") Achievements
        li: a(routerLink="/dash/games/adventures") Adventures
        li: a(routerLink="/dash/games/creative-murders") Creative Murders
        li: a(routerLink="/dash/games/investments") Investments
